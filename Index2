    <!-- Slide 5: Methodology -->
    <section id="methodology" class="bg-white">
        <div class="container">
            <h2 class="section-header">4. Methodology</h2>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card p-3">
                        <h6>1. Data Collection</h6>
                        <p class="small text-muted">Scraping educational platforms, GitHub repositories, and research papers.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card p-3">
                        <h6>2. Preprocessing</h6>
                        <p class="small text-muted">Tokenization, stop-word removal, and stemming/lemmatization.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card p-3">
                        <h6>3. Feature Extraction</h6>
                        <p class="small text-muted">Using TF-IDF and Word Embeddings (Word2Vec/BERT).</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card p-3">
                        <h6>4. Recommendation Engine</h6>
                        <p class="small text-muted">Content-based filtering and Cosine Similarity for semantic matching.</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card p-3">
                        <h6>5. Ranking Mechanism</h6>
                        <p class="small text-muted">Ranking based on relevance score, popularity, and user feedback.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Slide 6: Implementation -->
